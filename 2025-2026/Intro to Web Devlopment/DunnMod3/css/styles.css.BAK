:root {
    --color-dark: #181825;
    --color-light: #e9e9e6;
    --color-link: #FFC145;
    --color-main: #5B5F97;
    --site-width: 1000px;
}

body {
    background-color: var(--color-light);
    color: var(--color-dark);
    font-family: sans-serif;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body>header {
    background-color: var(--color-main);
    color: var(--color-light);
}

.site-width {
    max-width: var(--site-width);
    padding-left: 2rem;
    padding-right: 2rem;
    margin: 0 auto;
}

.btn {

    border-radius: 30px;
    margin-top: 25px;
    background-color: var(--color-link);
    /* color: var(); */
    font-weight: bold;
    border: none;
    padding: 7.5px;

    &:hover {
        opacity: .8;
        cursor: pointer;

        /*> input:active*/
        &:active {
            opacity: .6;
        }
    }


}