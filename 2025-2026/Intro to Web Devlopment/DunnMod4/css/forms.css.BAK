form {

    background-color: white;
    max-width: 250px;
    margin: 1rem auto;
    padding: 1rem;

    -webkit-box-shadow: 5px 5px 5px 0px rgba(0, 0, 0, 0.58);
    box-shadow: 5px 5px 5px 0px rgba(0, 0, 0, 0.58);

    >label,
    >input {
        width: 100%;
        display: block;

    }

    >input {
        margin-bottom: 0.75rem;
        padding: 5px;
    }

    >label {
        font-weight: bold;
        font-size: .75rem;
        margin-bottom: 1px;
        margin-left: 2px;

    }

    >header {
        margin-bottom: 1rem;
        text-align: center;
    }

    > textarea{

    }

    > select{
        
    }
}